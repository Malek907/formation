<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Tree view-->
            <record model="ir.ui.view" id="registration_tree_view">
                <field name="name">registration.registration.tree</field>
                <field name="model">registration.registration</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Inscritption">
                        <field name="name"/>
                        <field name="code"/>
                          <field name="start_date"/>
                           <field name="end_date"/>
                            <field name="cycle_id"/>
                             <field name="years_id"/>
                          
                                <field name="state"/>
                             
                        
                        <field name="description"/>
                    </tree>
                </field>
            </record>
            
			<!--form view-->
            <record model="ir.ui.view" id="registration_form_view">
                <field name="name">registration.registration.form</field>
                <field name="model">registration.registration</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="form_string">
             
                     <sheet>
                      
                    	<group>
	                    	
	                    		<field name="name"/>
	                    	
	                    		<field name="code"/>
	                    	
	                    	 <field name="start_date"/>
	
                           <field name="end_date"/>
 		
                            <field name="cycle_id"/>
   
                             <field name="years_id"/>
          	

                           <field name="priority" widget="priority"/>
                        

                    	</group>
                    	<notebook>
                            <page string="Reclamation">
                                <field name="claim_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    
                    
                    
                       <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>
                	
                	
                   </form>
                </field>
            </record>
			
			<!-- Action view-->
            <record model="ir.actions.act_window" id="registration_action_view">
                <field name="name">Inscription</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">registration.registration</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <!-- <field name="domain">[('field_name','condition',criteria)]</field>-->
                <!-- <field name="context">{'default_field':'value'}</field>-->
            </record>

       </odoo>