<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <!--Tree view-->
            <record model="ir.ui.view" id="claim_tree_view">
                <field name="name">claim.claim.tree</field>
                <field name="model">claim.claim</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Reclamation">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="start_date"/>
                           <field name="end_date"/>
                          <field name="reg_id"/>
                           <field name="user_id"/>
                          
                           
                        <field name="description"/>
                    </tree>
                </field>
            </record>
            
			<!--form view-->
            <record model="ir.ui.view" id="claim_form_view">
                <field name="name">claim.claim.form</field>
                <field name="model">claim.claim</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="form_string">
                     <sheet>
                    	<group>
	                    	<group>
	                    		<field name="name"/>
	                    	
	                    		<field name="code"/>
	                    	
	                    	 <field name="start_date"/>

                           <field name="end_date"/>
                           <field name="reg_id"/>	
                            <field name="user_id"/>
                            <field name="state"/>
                            <field name="amount"/>
                            <field name="hours"/>
                            <field name="total"/>
                            <field name="sum"/>
                            
                     
	                    	</group>
                    	</group>
                    	<notebook>
                            <page string="Page">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                   </form>
                </field>
            </record>
            
            
            
            
			
  <!--claim.claim:calendar view-->
			<record model="ir.ui.view" id="claim_calendar_view">
			    <field name="name">claim.claim.calendar</field>
			    <field name="model">claim.claim</field>
			    <field name="arch" type="xml">
			    	   <calendar string="Reclamation" date_start="start_date" color="user_id">
			              <field name="name"/>
			              <field name="code"/>
			           </calendar>
			    </field>
			</record>
			
			
			
 <!--claim.claim:graph view-->
			<record model="ir.ui.view" id="claim_graph_view">
			<field name="name">claim.claim.graph</field>
			<field name="model">claim.claim</field>
			<field name="arch" type="xml">
				<graph string="Graphe">
					<field name="state" />
				    <field name="name" />				
				</graph>
			</field>
        </record>
        
        
        
         <!--claim.claim:pivot view-->
         <record id="claim_view_pivot" model="ir.ui.view">
        <field name="name">claim.claim.pivot</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
            <pivot string="Description">
                <field name="state"/>
                 <field name="name"/>
                
            </pivot>
        </field>
    </record>
			
			
			
			
			
<!-- claim.claim: Search views -->
   <record id="claim_request_view_search" model="ir.ui.view">
        <field name="name">claim.claim.search</field>
        <field name="model">claim.claim</field>
        <field name="arch" type="xml">
             <search string="DescriptionSearch">
                   <field name="name"/>
                   <field name="code"/>
                   <field name="reg_id"/>
                   
               <separator/>
                              <filter string="Nouvelle" name="new" domain="[('state', '=', 'new')]"/>
                              <filter string="Validée" name="done" domain="[('state', '=', 'done')]"/>
                              <filter string="Annulée" name="cancel" domain="[('state', '=', 'cancel')]"/>
            <group  expand='0' string='Group by...'>
                    <filter string='Responsable' domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string='Date Debut' domain="[]" context="{'group_by' : 'start_date'}"/>
            </group>
           </search>
        </field>
   </record>
   
   
            
			<!-- Action view-->
            <record model="ir.actions.act_window" id="claim_action_view">
                <field name="name">Reclamation</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">claim.claim</field>
                <field name="view_type">form</field>
                <field name="view_mode">pivot,graph,calendar,tree,form</field>
            </record>
              
            
</odoo>